        android:id="@+id/inMainCal_1stweekLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_lightpurple">

        <TextView
            android:id="@+id/detail_1dateTv"
            android:layout_width="0dp"
