<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:padding="32dp">

    <!-- 타이틀 텍스트 -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/roboto_bold"
        android:text="이런 취미는 어떤가요?"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!-- 서브타이틀 텍스트 -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_bold"
        android:text="사소한 것부터 시작해 보세요!\n사람들은 이런 걸 즐기고 있어요."
        android:textColor="#666666"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- 새로고침 버튼 -->
    <Button
        android:id="@+id/in_RtnRecommand_refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_med"
        android:text="새로고침" />

    <!-- 추천 카드뷰들 -->
    <LinearLayout
        android:id="@+id/recommendationBoxes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitleText"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <!-- 첫 번째 카드뷰 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/in_RtnRecommand_CardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/in_RtnRecommand_hobby_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_med"
                    android:text="독서"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/in_RtnRecommand_hobby_descript1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_med"
                    android:text="책을 읽는 것은 작가와 소통하는 멋진 경험입니다."
                    android:textColor="#E0E0E0"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 두 번째 카드뷰 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/in_RtnRecommand_CardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/in_RtnRecommand_hobby_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_med"
                    android:text="요리"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/in_RtnRecommand_hobby_descript2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_med"
                    android:text="새로운 요리를 시도하며 창의력을 발휘해보세요."
                    android:textColor="#E0E0E0"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 세 번째 카드뷰 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/in_RtnRecommand_CardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            card_view:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/in_RtnRecommand_hobby_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_med"
                    android:text="나만의 취미"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/in_RtnRecommand_hobby_descript3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_med"
                    android:text="다른 사람들이 모르는 나만의 취미가 있나요?"
                    android:textColor="#E0E0E0"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>
