<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 카테고리 1 버튼 -->
    <Button
        android:id="@+id/category1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jomhuria"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:text="Category 1"
        android:background="@drawable/rounded_purple_color"/>

    <!-- 카테고리 1 일정 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category1RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- 카테고리 2 버튼 -->
    <Button
        android:id="@+id/category2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jomhuria"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:text="Category 2"
        android:background="@drawable/rounded_purple_color"/>

    <!-- 카테고리 2 일정 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category2RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- 카테고리 3 버튼 -->
    <Button
        android:id="@+id/category3Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jomhuria"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:text="Category 3"
        android:background="@drawable/rounded_purple_color"/>

    <!-- 카테고리 3 일정 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category3RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>